@model IEnumerable<SISProject.Models.UplodedFile>

@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}


<link rel="stylesheet" href="/assets/plugin/datatables/media/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" href="/assets/plugin/datatables/extensions/Responsive/css/responsive.bootstrap.min.css">

<div>
    <a href="@Url.Action("Create","UplodedFiles")" class="btn  btn-success">
        <i class="fa fa-plus"></i> Upload files
    </a>

</div>
<table class="table table-bordered table-responsive"  id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
             
                <td>
                    <a href="@Url.Action("Edit","UplodedFiles",new { id = item.Id })" class="btn btn-primary waves-effect waves-light">
                        <i class="ico ico-right fa fa-edit"></i>Edit
                    </a>
                    |
                    <a href="@Url.Action("Details","UplodedFiles",new { id = item.Id })" class="btn btn-info waves-effect waves-light">
                        <i class="ico ico-right fa fa-info"></i>Details
                    </a> |
                    <a href="@Url.Action("Delete","UplodedFiles",new { id = item.Id })" class="btn btn-danger waves-effect waves-light">
                        <i class="mdi mdi-delete-forever"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="/assets/scripts/jquery.min.js"></script>

<!-- Full Screen Plugin -->
<!-- Data Tables -->
<script src="/assets/plugin/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="/assets/plugin/datatables/media/js/dataTables.bootstrap.min.js"></script>
<script src="/assets/plugin/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
<script src="/assets/plugin/datatables/extensions/Responsive/js/responsive.bootstrap.min.js"></script>
<script>
    $('#example').DataTable({
        "columnDefs": [

            { "orderable": false, "targets": 4 }



        ],

        "pageLength": 10,
        "bInfo": false,
        "dom": "Bfrtp",








    });

</script>
<script src="/assets/scripts/main.min.js"></script>



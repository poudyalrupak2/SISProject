@model SISProject.Models.UplodedFile

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script src="~/Content/dist/js/tag-input.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@using (Html.BeginForm("Create", "UplodedFiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UplodedFile</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })  
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { @id = "FullDescription", @class = "form-control", style = "width:300px; height:150px;" }) @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
           </div>  
        <div class="col-md-12">
            <div class="col-md-2">
                <label class="control-label col-md-2" style="width:185px;height:27px;">tags</label>
            </div>
            <div id="tags">
                @Html.TextBoxFor(Model => Model.Tags, new { id = "add_tag" })
                <div class="tags_dropdown">
                </div>

            </div>
        </div>
        @*<div class="form-group">
            @Html.LabelFor(model => model.UplodedBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UplodedBy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UplodedBy, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Filename, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Files" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    new inputTags({
        asd: true,
        id: 'add_tag',
        tags:['Raj'],
        maxTags: 20,
        allowDuplicateTags: false,
        onTagRemove: function (tag) {
            alert(tag + "Tag is going to be removed");
        },
    })
</script>
<link rel="stylesheet" href="~/content/dist/stylesheets/inputTag.css">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}

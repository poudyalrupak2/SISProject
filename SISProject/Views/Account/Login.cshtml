
@model SchoolInformationSystem.ViewModels.LoginViewModel


@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Home</title>
    <link rel="stylesheet" href="/assets/styles/style.min.css">

    <!-- Waves Effect -->
    <link rel="stylesheet" href="/assets/plugin/waves/waves.min.css">

</head>
<body>
<div id="single-wrapper">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "frm-single" }))
    {
    <div class="inside">
        <div class="title">Student Information System</div>
        <!-- /.title -->
        <div class="frm-title">
            <span style="color:red">
                @Html.ValidationMessage("")
            </span>
            </div>
            <div class="frm-title">Login</div>

            <!-- /.frm-title -->
            <div class="frm-input">

                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "", @class = "frm-inp" })
                <i class="fa fa-user frm-ico"></i>
            </div>
            <!-- /.frm-input -->
            <div class="frm-input">
                @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", type = "Password", @class = "frm-inp", required = "" })
                <i class="fa fa-lock frm-ico"></i>
            </div>
            <!-- /.frm-input -->
            <div class="clearfix margin-bottom-20">

                <!-- /.pull-left -->
                <div class="pull-right"><a href="page-recoverpw.html" class="a-link"><i class="fa fa-unlock-alt"></i>Forgot password?</a></div>
                <!-- /.pull-right -->
            </div>
            <!-- /.clearfix -->
            <button type="submit" class="frm-submit">Login<i class="fa fa-arrow-circle-right"></i></button>

            <div class="row small-spacing">

                <!-- /.col-sm-12 -->

            </div>
            <!-- /.row -->
            New to SIS? Contact SysAdmin To Register.
            <div class="frm-footer">SIS © 2019</div>
            <!-- /.footer -->
        </div>
        }
        <!-- .inside -->
        <!-- /.frm-single -->
    </div>
<script src="/assets/scripts/jquery.min.js"></script>
	<script src="/assets/scripts/modernizr.min.js"></script>
    <script src="/assets/plugin/bootstrap/js/bootstrap.min.js"></script>
	<script src="/assets/plugin/nprogress/nprogress.js"></script>
	<script src="/assets/plugin/waves/waves.min.js"></script>

	<script src="/assets/scripts/main.min.js"></script>
</body>
</html>


